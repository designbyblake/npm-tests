{
  "name": "npm-starter-file",
  "version": "0.0.1",
  "author": "Dan Blake <dan@designbyblake.com> (http://www.designbyblake.com)",
  "license": "MIT",
  "description": "Starter Files for NPM Scripts",
  "devDependencies": {
    "babel-cli": "^6.18.0",
    "babel-polyfill": "^6.20.0",
    "babel-preset-es2015": "^6.18.0",
    "babelify": "^7.3.0",
    "browser-sync": "^2.18.5",
    "browserify": "^13.1.1",
    "clean-css": "^3.4.23",
    "concurrently": "^3.1.0",
    "copyfiles": "^1.0.0",
    "del": "^2.2.2",
    "eslint": "^3.13.1",
    "eslint-nibble": "^3.1.0",
    "grunt": "^1.0.1",
    "grunt-twig-render": "^1.8.0",
    "gulp": "^3.9.1",
    "gulp-combine-mq": "^0.4.0",
    "gulp-file-include": "^1.0.0",
    "gulp-html-prettify": "0.0.1",
    "gulp-html-validator": "0.0.5",
    "gulp-htmlhint": "^0.3.1",
    "gulp-notify": "^2.2.0",
    "gulp-plumber": "^1.1.0",
    "gulp-watch": "^4.3.11",
    "htmlhint-stylish": "^1.0.3",
    "imagemin": "^5.2.2",
    "imagemin-mozjpeg": "^6.0.0",
    "imagemin-pngquant": "^5.0.0",
    "minifier": "^0.8.0",
    "node-sass": "^4.1.1",
    "onchange": "^3.2.1",
    "pleeease": "^4.1.0",
    "pleeease-cli": "^4.0.0",
    "svgo": "^0.7.1",
    "uglifyjs": "^2.4.10"
  },
  "scripts": {
    "scss": "node-sass --output-style expanded --indent-type tab --indent-width 1 -o build/_temp build/_sass",
    "combineMq": "gulp combineMq",
    "pleeease": "pleeease-compile",
    "build:css": "npm run scss && npm run combineMq && npm run pleeease",
    "minify:css": "npm run build:css && cleancss -o public/assets/css/screen.css public/assets/css/screen.css",
    "watch:css": "onchange \"build/_sass/**/*.scss\" -- npm run build:css",
    "build:js": "browserify build/_js/_custom/scripts.js -d -o public/assets/js/scripts.js -t [ babelify --presets [ es2015 ] ]",
    "build:js:prod": "browserify build/_js/_custom/scripts.js -o public/assets/js/scripts.js -t [ babelify --presets [ es2015 ] ] && minify -o public/assets/js/scripts.js public/assets/js/scripts.js",
    "js:scripts": "cd build/_js/_lib && uglifyjs jquery.js picturefill.min.js -o ../../../public/assets/js/plugins.js",
    "watch:js": "onchange \"build/_js/**/*.js\" -- npm run build:js",
    "minify:js": "npm run js:scripts && npm run build:js:prod",
    "eslint": "eslint \"build/_js/_custom/**\"",
    "nibble": "eslint-nibble \"build/_js/_custom/**\"",
    "images": "node image.js",
    "images:move": "node move-images.js",
    "svg:min": "svgo -f public/assets/images/",
    "gulp:build": "gulp fileinclude && gulp templates",
    "twig": "grunt && gulp templates",
    "watch:html": "onchange \"build/_html/**/*.html\" -- npm run gulp:build",
    "watch:twig": "onchange \"build/_twig/**/*.twig\" \"build/_json/**/*.json\" -- npm run twig",
    "prod": "npm run minify:css && npm run minify:js",
    "sync": "cd public && browser-sync start --server --files \"**/**/*.*\"",
    "watch:all": "concurrently \"npm run watch:css\" \"npm run watch:js\" \"npm run watch:html\" \"npm run watch:twig\"",
    "start": "concurrently \"npm run sync\" \"npm run watch:all\""
  }
}
